{
  "name": "kratos-vscode",
  "displayName": "kratos-vscode",
  "description": "Debugger for kratos generators",
  "publisher": "keyiz",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.33.0"
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/Kuree/kratos-vscode.git"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug",
    "onCommand:extension.kratos-debug.getProgramName"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "kratos",
        "label": "Kratos Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a debug file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "kratos",
            "request": "launch",
            "name": "Ask for debug file",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Kratos Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected debug file.",
            "body": {
              "type": "kratos",
              "request": "launch",
              "name": "Ask for debug file",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.kratos-debug.getProgramName"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.33.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0",
    "vscode-debugadapter-testsupport": "^1.37.1"
  },
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/request": "^2.48.3",
    "await-notify": "^1.0.1",
    "express": "^4.17.1",
    "request": "^2.88.0",
    "sync-request": "^6.1.0",
    "vscode-debugadapter": "^1.37.1",
    "vscode-debugprotocol": "^1.37.0"
  }
}
